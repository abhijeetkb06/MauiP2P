<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CouchbaseMauiApp.Views.SplashPage"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
            <Image Source="couchbase_logo.png" HeightRequest="120" WidthRequest="120"/>
            <Label Text="SyncFlow" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Text="Powered by Couchbase Mobile" FontSize="16" HorizontalOptions="Center"/>
            
            <Button Text="Get Started" 
                    Command="{Binding StartCommand}"
                    BackgroundColor="#ED2224"
                    TextColor="White"
                    WidthRequest="200"
                    Margin="0,40,0,0"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage> 