<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CouchbaseMauiApp"
             xmlns:converters="clr-namespace:CouchbaseMauiApp.Core.Converters"
             x:Class="CouchbaseMauiApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <converters:DictionaryToStringConverter x:Key="DictionaryToStringConverter"/>
            <converters:BoolToStartStopConverter x:Key="BoolToStartStopConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
