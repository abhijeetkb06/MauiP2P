{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Android",
        "type": "dotnet",
        "request": "launch",
        "projectPath": "${workspaceFolder}/CouchbaseMauiApp/CouchbaseMauiApp.csproj",
        "launchSettingsFilePath": "${workspaceFolder}/CouchbaseMauiApp/Properties/launchSettings.json",
        "targetFramework": "net8.0-android",
        "deploymentTarget": "Pixel_6_API_34"
      },
      {
        "name": "Debug iOS Simulator",
        "type": "dotnet",
        "request": "launch",
        "projectPath": "${workspaceFolder}/CouchbaseMauiApp/CouchbaseMauiApp.csproj",
        "launchSettingsFilePath": "${workspaceFolder}/CouchbaseMauiApp/Properties/launchSettings.json",
        "targetFramework": "net8.0-ios",
        "runtimeIdentifier": "iossimulator-arm64",  // force targeting simulator
        "deploymentTarget": "iPhone 15 Pro"
      }
    ]
  }
  